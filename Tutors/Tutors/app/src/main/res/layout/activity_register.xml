<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andrearaffo.tutors.RegisterActivity">

    <ImageView android:id="@+id/imageView" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:layout_marginTop="84dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <EditText android:id="@+id/usernameTextEdit" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" android:layout_marginTop="32dp" android:ems="10"
        android:hint="Username" android:inputType="textPersonName" />

    <EditText android:id="@+id/emailTextEdit" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignLeft="@+id/usernameTextEdit"
        android:layout_alignStart="@+id/usernameTextEdit"
        android:layout_below="@+id/usernameTextEdit" android:ems="10" android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText android:id="@+id/passwordTextEdit" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignLeft="@+id/emailTextEdit"
        android:layout_alignStart="@+id/emailTextEdit" android:layout_below="@+id/emailTextEdit"
        android:ems="10" android:hint="Password" android:inputType="textPassword" />

    <EditText android:id="@+id/confirmPasswordTextEdit" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignLeft="@+id/passwordTextEdit"
        android:layout_alignStart="@+id/passwordTextEdit"
        android:layout_below="@+id/passwordTextEdit" android:ems="10"
        android:hint="Conferma Password" android:inputType="textPassword" />

    <Button android:id="@+id/registerButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/confirmPasswordTextEdit"
        android:layout_centerHorizontal="true" android:layout_marginTop="15dp"
        android:text="Registrati" />
</android.widget.RelativeLayout>
